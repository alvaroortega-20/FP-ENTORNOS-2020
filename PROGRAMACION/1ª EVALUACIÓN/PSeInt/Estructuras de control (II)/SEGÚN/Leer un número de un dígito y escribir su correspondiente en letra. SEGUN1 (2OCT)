Algoritmo Segun1	
	Definir n Como Entero;
	Escribir "Dime un número del 1 al 9"
	Leer n;
	Segun n Hacer
		0:
			Escribir "a"
		1:
			Escribir "b"
		2:
			Escribir "c"
		3:
			Escribir "d"
		4:
			Escribir "e"
		5:
			Escribir "f"
		6:
			Escribir "g"
		7:
			Escribir "h"
		8:
			Escribir "i"
		9:
			Escribir "j"
		
		De Otro Modo:
			Escribir "ERROR";
	Fin Segun
	
FinAlgoritmo
